<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="0dp"
        app:layout_widthPercent="90%w"
        android:layout_height="50dp"
        android:text="手机号 : 18711346638"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%h"
        android:id="@+id/register_2_header_area" />



    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_widthPercent="90%w"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%h"
        android:id="@+id/register_account_area"
        android:layout_below="@+id/register_2_header_area">

        <EditText
            android:layout_width="0dp"
            app:layout_widthPercent="55%"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/textborder"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="输入验证码"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/register_account_icon"
            android:id="@+id/verificate_value"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="40%w"
            app:layout_heightPercent="90%h"
            android:background="@color/module_6"
            android:text="获取验证码(59秒)"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/verificate_value"
            app:layout_marginLeftPercent="5%w"
            android:id="@+id/acquire_verification_button"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_widthPercent="90%w"
        app:layout_marginTopPercent="5%h"
        android:layout_below="@+id/register_account_area"
        android:background="@color/module_11"
        android:text="提交验证码"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/commit_button"/>


</com.zhy.android.percent.support.PercentRelativeLayout>