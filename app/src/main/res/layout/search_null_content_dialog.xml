<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="##########"
        android:textColor="@color/module_6"
        android:id="@+id/search_null_content_dialog_top"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="请尝试其他类型搜索"
        android:textColor="@color/module_6"
        android:id="@+id/search_null_content_dialog_header"
        android:layout_below="@id/search_null_content_dialog_top"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_null_content_dialog_header"
        android:layout_marginTop="20dp"
        android:id="@+id/search_null_content_dialog_rview"
        ></android.support.v7.widget.RecyclerView>

</RelativeLayout>